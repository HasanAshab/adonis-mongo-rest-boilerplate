{
  "typescript": true,
  "commands": [
    "./commands",
    "@adonisjs/core/build/commands/index.js",
    "@adonisjs/repl/build/commands",
    "@adonisjs/bouncer/build/commands"
  ],
  "namespaces": {
    "httpControllers": "App/Http/Controllers",
    "validators": "App/Http/Validators",
    "middleware": "App/Http/Middleware"
  },
  "exceptionHandlerNamespace": "App/Exceptions/Handler",
  "aliases": {
    "App": "app",
    "Config": "config",
    "Database": "database",
    "Contracts": "contracts"
  },
  "preloads": [
    "./start/routes",
    "./start/kernel",
    "./start/bouncer",
    {
      "file": "./start/validator",
      "environment": [
        "web",
        "test"
      ]
    },
    {
      "file": "./start/events",
      "environment": [
        "web",
        "test"
      ]
    }
  ],
  "providers": [
    "./providers/AppProvider",
    "@adonisjs/core",
    "./providers/MongooseProvider",
    "@adonisjs/bouncer",
    "@adonisjs/ally"
  ],
  "aceProviders": [
    "@adonisjs/repl"
  ],
  "tests": {
    "suites": [
      {
        "name": "functional",
        "files": [
          "tests/functional/**/*.spec(.ts|.js)"
        ],
        "timeout": 60000
      }
    ]
  },
  "testProviders": [
    "@japa/preset-adonis/TestsProvider"
  ]
}